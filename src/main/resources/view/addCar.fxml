<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="838.0" prefWidth="900.0" style="-fx-background-color: #2F4F4F;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.verbovskiy.client.controller.AddCarController">
   <children>
      <Button fx:id="buttonSelectImage" layoutX="333.0" layoutY="240.0" mnemonicParsing="false" onAction="#selectCar" prefHeight="32.0" prefWidth="234.0" text="Выбрать фотографию" textFill="DARKSLATEGRAY">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <ChoiceBox fx:id="carBrand" layoutX="67.0" layoutY="314.0" prefWidth="150.0" />
      <ChoiceBox fx:id="carColor" layoutX="271.0" layoutY="314.0" prefWidth="150.0" />
      <ChoiceBox fx:id="boxType" layoutX="473.0" layoutY="314.0" prefWidth="150.0" />
      <ChoiceBox fx:id="carEngine" layoutX="660.0" layoutY="314.0" prefWidth="150.0" />
      <TextField fx:id="yearOfManufacture" alignment="CENTER" layoutX="324.0" layoutY="374.0" prefHeight="32.0" prefWidth="250.0" promptText="*Год выпуска">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </TextField>
      <TextField fx:id="price" alignment="CENTER" layoutX="324.0" layoutY="429.0" prefHeight="32.0" prefWidth="250.0" promptText="*Цена">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </TextField>
      <TextField fx:id="carModel" alignment="CENTER" layoutX="324.0" layoutY="485.0" prefHeight="32.0" prefWidth="250.0" promptText="*Модель">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </TextField>
      <TextArea fx:id="description" layoutX="17.0" layoutY="545.0" prefHeight="132.0" prefWidth="864.0" promptText="Описание(до 500 символов)">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </TextArea>
      <Button fx:id="buttonSaveCar" layoutX="333.0" layoutY="698.0" mnemonicParsing="false" onAction="#saveCar" prefHeight="32.0" prefWidth="234.0" text="Сохранить" textFill="DARKSLATEGRAY">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <Button fx:id="buttonExit" layoutX="333.0" layoutY="745.0" mnemonicParsing="false" onAction="#exit" prefHeight="32.0" prefWidth="234.0" text="Вернуться назад" textFill="DARKSLATEGRAY">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <ImageView fx:id="imageView" fitHeight="180.0" fitWidth="234.0" layoutX="333.0" layoutY="19.0" pickOnBounds="true" preserveRatio="true" />
   </children>
</AnchorPane>
